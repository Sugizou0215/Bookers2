<% if @model == 'user' %>
  <h3>【Usersモデルの検索結果】検索ワード：<%= @content %></h3>
  <% users = @records %>
  <table class="table">
  	<thead>
  		<tr>
	      <th>image</th>
	      <th>user</th>
	    </tr>
  	</thead>
		<tbody>
			<% users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
					<td>
						<%= link_to user_path(user) do %>
							<%= user.name %><br>
  					<% end %>
					</td>
				</tr>
  		<% end %>
		</tbody>
  </table>

<% else @model == 'book' %>
  <h3>【Postsモデルの検索結果】検索ワード：<%= @content %></h3>
  <% books = @records %>
  <table class ="table">
	  <thead>
	    <tr>
	      <th></th>
	      <th>Title</th>
	      <th>Opinion</th>
	    </tr>
	  </thead>
	  <tbody>
		  <% books.each do |book| %>
		    <tr>
		      <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
		      <td><%= link_to book.title, book_path(book.id) %></td>
		      <td><%= book.body %></td>
		    </tr>
		  <% end %>
	  </tbody>
	</table>
<% end %>
<%#本人情報%>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
	          <th>introduction</th>
	          <th><%= user.introduction %></th>
	        </tr>
	      </tbody>
	    </table>
      <div class ="row">
        <% if user.id == current_user.id %>
          <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
        <% else %>
          <p><%= link_to "プロフィール編集", user_path(current_user.id) %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
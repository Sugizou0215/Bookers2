<%#新規投稿%>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>New Book</h2>
      <%= form_with model: book, url:books_path, local:true do |f| %>
        <label>Title</label>
        <%= f.text_field :title %>
        <label>Opinion</label>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </div>
</div>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<%#サイドバー%>
<%= render './users/sidebar', user: @user, book: @book %>

<%#投稿一覧%>
<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <%= link_to book_path(book.id) do %>
  <% end %>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  <p>body：<%= book.body %></p>
</div>
<% end %>
<%#本人情報%>
<div>
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <p>Name：<%= @user.name %></p>
  <p>Introduction：<%= @user.introduction %></p>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% else %>
    <p><%= link_to "プロフィール編集", user_path(current_user.id) %></p>
  <% end %>
</div>

<%#新規投稿%>
<h2>New Book</h2>
<%= form_with model: @book, url:books_path, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
<%#エラーメッセージ%>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>


<%#投稿一覧%>
<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <%= link_to book_path(book.id) do %>
  <% end %>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  <p>body：<%= book.body %></p>
</div>
<% end %>